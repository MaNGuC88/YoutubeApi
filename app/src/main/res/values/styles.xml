<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyCustomTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:statusBarColor">@color/bg_main</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleText</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBar.TitleText</item>
        <item name="actionMenuTextColor">@color/btn_color_main</item>
        <item name="android:background">@color/bg_main</item>
        <item name="android:height">150dp</item>
        <item name="height">60dp</item>
    </style>

    <style name="MyActionBar.TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/btn_color_main</item>
    </style>

    <style name="btn_main_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@drawable/bg_btn_main</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iv_video_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:contentDescription">@string/todo</item>
    </style>

    <style name="tv_playlist_secondary_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="txt_iv_playlist">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@drawable/bg_iv_playlist_text</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:paddingStart">54dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_style_main">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:fontFamily">@font/fjalla_one</item>
        <item name="android:textColor">@color/txt_color_main</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>