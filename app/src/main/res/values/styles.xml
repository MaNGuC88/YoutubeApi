<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="btn_main_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@drawable/bg_btn_main</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_style_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/iv_no_connection</item>
        <item name="android:fontFamily">@font/fjalla_one</item>
        <item name="android:textColor">@color/txt_color_main</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iv_video_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:contentDescription">@string/todo</item>
    </style>

    <style name="tv_playlist_secondary_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>