<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/iv_pl_item"
        style="@style/iv_video_style"
        android:background="@drawable/bg_image"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_pl_item_title"
        style="@style/tv_style_main"
        android:text="@string/tv_txt_example"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_pl_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pl_item_length"
        style="@style/tv_playlist_secondary_style"
        tools:text="@string/video_length"
        app:layout_constraintStart_toEndOf="@+id/iv_pl_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_pl_item_title" />


</androidx.constraintlayout.widget.ConstraintLayout>